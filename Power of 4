class Solution:
    def isPowerOfFour(self, num: int) -> bool:
        if num == 1:
            return True
        elif num < 4:
            return False
        else:
            while True:
                if num % 4 == 0:
                    num = num / 4
                elif num == 1:
                    return True
                else:
                    return False
        
